    "counterAxisAlignItems": "MIN",
    "primaryAxisSizingMode": "FIXED",
    "counterAxisSizingMode": "AUTO",
    "itemSpacing": 20,
    "minWidth": 300,
    "maxWidth": 600,
    "paddingTop": 20,
    "paddingBottom": 20,
    "paddingLeft": 20,
