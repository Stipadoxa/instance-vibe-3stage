        "layoutPositioning": "AUTO"
      }
    },
    {
      "type": "native-rectangle",
      "width": 100,
      "height": 80,
      "fill": { "r": 1.0, "g": 0.5, "b": 0.2 },
      "properties": {
        "layoutAlign": "CENTER",
        "layoutGrow": 1,
        "layoutPositioning": "AUTO",
        "minHeight": 60,
        "maxHeight": 120
      }
    },
    {
      "type": "native-text",
      "text": "Footer Text",
      "properties": {
        "layoutAlign": "MAX",
